#include<stdio.h>
void main()
{
    int i,n[50],m,k=0,l=0;
    printf("enter the number : ");
    scanf("%d",&m);
    for(i=0;i<m;i++)
    {
        printf("enter element : ");
        scanf("%d",&n[i]);
        if(n[i]%2==0)
        {
            k+=n[i];
            l++;
        }
    }
    printf("sum = %d\n",k);
    printf("average = %d",(k/l));
}
